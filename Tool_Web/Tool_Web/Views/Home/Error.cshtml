@{
    Layout = null;
}

<!DOCTYPE html>
@Styles.Render("~/Content/css")
<style type="text/css">
    html, body {
        padding: 0;
        background-image: url('Image/b2.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        width: 100%;
        height: 100%;
        min-width: 320px;
        min-height: 510px;
    }
    #Alarm {
        width: 256px;
        height: 256px;
    }
    #top {
        height: 100px;
    }

    @@media screen and (max-width: 360px) {
        #Alarm {
            width: 128px;
            height:128px;
        }
        h4 {
            font-size: 1.2rem;
        }
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="top"></div>
    <div class="text-center">
        <img id="Alarm " src="Image/Icon/Alarm.svg" alt="" title="Bootstrap">
        <h4><strong>此功能正在開發中，敬請期待</strong></h4>
    </div>
</body>
</html>
